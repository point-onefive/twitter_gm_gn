# Twitter/X API Credentials
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_SECRET=your_access_token_secret_here

# Optional: Client ID and Client Secret (for OAuth 2.0)
X_CLIENT_ID=your_client_id_here
X_CLIENT_SECRET=your_client_secret_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Upstash Redis for cloud state persistence (Required for GitHub Actions)
UPSTASH_URL=your_upstash_redis_url_here
UPSTASH_TOKEN=your_upstash_redis_token_here

# Bot Configuration (Optional - defaults provided)
MAX_REPLIES=8
MIN_FOLLOWERS=500
LANGS=en,es,pt
AUTO_LIKE=true

# Optional: Configuration
NODE_ENV=development
